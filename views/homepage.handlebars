{{#each posts as |post| }}
<div class="row mb-4">
  <div class="col-md-5">
    <h2>
     
      {{{format_date}}}
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>Created by {{post.user}} on {{format_date post.date_created}}</p>
  </div>

  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>

</div>
{{/each}}